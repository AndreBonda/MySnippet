@page
@model LoginModel

@{
    ViewData["Title"] = "Accedi";
    string title = "Accedi a MySnippet";
}


<div class="container-fluid">
    <div class="row">
        <partial name="_PageTitle" model="title" />
    </div>
    <div class="row">
        <div class="col-8 col-md-6 offset-2 offset-md-3">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary mt-2">Accedi</button>
                    </div>
                    <hr />
                    <div class="form-group text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword">Password dimenticata?</a>
                        <span class="text-divisor d-none d-lg-inline">·</span>
                        <br class="d-block d-lg-none" />
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registra un nuovo utente</a>
                        @*<p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

