@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password??";
    string title = "Password dimenticata";
}

<div class="container-fluid">
    <div class="row">
        <partial name="_PageTitle" model="title" />
    </div>
    <div class="row">
        <div class="col-8 col-md-6 offset-2 offset-md-3">
            <h5>Ripristina la tua password</h5>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary mt-2 submit">Invia</button>
                </div>
            </form>
        </div>
    </div>

</div>